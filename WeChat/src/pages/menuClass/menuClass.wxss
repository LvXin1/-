/* src/pages/menuClass/menuClass.wxss */
page{
  height:100%;
}
.content{
  display:flex;
  justify-content: space-between;
  height:100%;
}
.content .content-left{
  width:150rpx;
  height:100%;
  background:#f8f8f8;
  overflow:auto;
}
.content .content-left text{
  width:100%;
  display:block;
  text-align:center;
  height:100rpx;
  line-height:100rpx;
  font-size:14px;
  box-sizing: border-box;
}
.content .content-left text.active{
  background:#fff;
}
.content .content-right{
  flex:1;
  height:100%;
  overflow:auto;
}
.content-right_title{
  font-size:14px;
  height:100rpx;
  line-height:100rpx;
  width:100%;
  text-align:center;
  position:relative;
}
.content-right_title::before{
  position:absolute;
  top:50%;
  left:5%;
  width:30%;
  height:1px;
  background:rgba(248, 72, 72, 0.452);
  content:"";
}
.content-right_title::after{
  position:absolute;
  top:50%;
  right:5%;
  width:30%;
  height:1px;
  background:rgba(248, 72, 72, 0.452);
  content:"";
}
.content-right_list{
  display:flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.content-right_list text{
  box-sizing: border-box;
  flex:0 0 27.3%;
  border:1px solid #ccc;
  height:50rpx;
  line-height:50rpx;
  text-align:center;
  border-radius:20rpx;
  font-size:14px;
  margin:2% 3%;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding:0 15rpx;
}