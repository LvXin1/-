/* src/pages/index/index.wxss */
/* @import '../../../style/font.wxss'; */
.header{
   width:100%;
   padding:10rpx 0;
   height:auto;
}
.header input{
  width:80%;
  height:40rpx;
  display:block;
  margin:0 auto;
  border:1rpx solid #ccc;
  border-radius:20rpx;
  font-size:22rpx;
  padding-left:20rpx;
}
.banner{
  width:100%;
}
.banner image{display:block;width:100%;height:100%;}
.main{
  width:100%;
  height:auto;
  border-top:20rpx solid #f6f6f6;
  /* padding:0 15rpx; */
}
.main .nav{
  display:flex;
  justify-content:space-around;
  border-bottom:20rpx solid #f8f8f8;
}
.main .nav .nav-list{
  /* border:1px solid #f2f2f2; */
  border-radius:5rpx;
  width:150rpx;
  height:150rpx;
  /* box-shadow:5rpx 5rpx 5px #e0e0e0; */
}
.main .nav .nav-list .iconfont{
  font-size:50rpx;
  display:block;
  width:100%;
  text-align:center;margin-top:20rpx;
}
.info{
  font-size:22rpx;
  width:100%;
  display:block;
  text-align:center;
}
.dayCommend{
  padding:0 30rpx;
}
.title-h1{
  font-size:30rpx;
  display:block;
  height:80rpx;
  line-height:80rpx;
  padding:0 15rpx;
}
.scroll-view_H{
  display: flex;
  flex-direction: row;
  white-space: nowrap;  
}
.scroll-view_H view{
  height:340rpx;
  width:300rpx;
  display: inline-block; 
 padding:10rpx 15rpx;
}
.scroll-view-item_H image{
  height:300rpx;
  width:100%;
  /* border-radius:10rpx; */
  box-shadow:5px 5px 5px #888888;
}
.scroll-view-item_H text{
  line-height:40rpx;
  width:100%;
  display:block;
  text-align:center;
  font-size:28rpx
}
.boutiqueMenu{
  padding:0 30rpx;
}
.boutiqueMenu .scroll-view_H view{
  width:100%;
}
.popularCommend{
  padding-top:20rpx;
  border-top:10rpx solid #f8f8f8;
}
.popularCommend-title{
  font-size:30rpx;
  display:block;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  position:relative;

}
.popularCommend-title::before{
  position:absolute;
  left:20rpx;
  top:50%;
  height:2px;
  width:30%;
  background:#f8f8f8;
  content:'';
  display:block;
}
.popularCommend-title::after{
  position:absolute;
  right:20rpx;
  top:50%;
  height:2px;
  width:30%;
  background:#f8f8f8;
  content:'';
  display:block;
}
.popularCommend-list{
  padding:20rpx 30rpx;
}
.popularCommend-list .popularCommend-list_title{
  font-size:28rpx;
  display:block;
  height:60rpx;
}
.popularCommend-list image{
  width:100%;
  height:400rpx;
}
.popularCommend-list_memo{
  font-size:26rpx;
  color:#999;
}
.popularCommend-list_memo text{
  display:inline-block;
  padding-right:20rpx;
}